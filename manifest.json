{
	"manifest_version": 2,
	"name": "Dark Lord Days ticket helper",
	"version": "1.0.0",
	"browser_action": {
      "default_icon": {
        "19": "images/beer19.png",
        "38": "images/beer38.png"
      },
      "default_title": "Dark Lord Days ticket helper",
      "default_popup": "popup.html"
    },
    "permissions": [
    	"activeTab",
    	"http://*.etix.com/",
    	"https://*.etix.com/",
    	"tabs",
    	"background",
    	"browsingData",
    	"cookies",
    	"notifications",
    	"storage",
    	"webNavigation",
    	"webRequest"
    ],
    "background": {
    	"scripts": [
    		"js/background.js"
		]
    },
    "content_scripts": [
    	{
    		"matches": [
    			"http://*.etix.com",
    			"https://*.etix.com"
			],
			"css": [
				"css/content_scripts.css"
			],
			"js": [
				"js/jquery.min.js",
				"js/content_scripts.js"
			]
    	}
    ]
}